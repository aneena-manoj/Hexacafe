<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">My Restaurant</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/Customer/CustomerHome/SignUp">Customer SignUp</a></li>
                @if (Session["CustomerID"] != null)
                {
                    <li><a href="/Customer/CustomerHome/CustomerLogout">Logout</a></li>

                }
                else
                {
                    <li><a href="/Customer/CustomerHome/Login">Customer Login</a></li>
                }
                <li><a href="/Customer/Menu/MyOrder">Your Orders</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["RestaurentID"] != null)
                {
                    <li><a href="/Customer/CustomerHome/CustomerLogout"><span class="glyphicon glyphicon-user"></span> Admin Logout</a></li>
                }
                else
                {
                    <li><a href="/Restaurent/RestaurentHome/Login"><span class="glyphicon glyphicon-user"></span> Restaurant Admin Login</a></li>

                }
                <li><a href="/Restaurent/RestaurentHome/SignUp"><span class="glyphicon glyphicon-log-in"></span> Restaurant SignUp</a></li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Restaurant App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
